@switch (State)
{
    case UiState.Loading:
        @UiLoading
        break;
    case UiState.Loaded:
        @UiLoaded
        break;
    case UiState.Error:
        @UiError
        break;
    default:
        throw new ArgumentOutOfRangeException();
}

@code {
    [Parameter] [EditorRequired] public UiState State { get; set; }
    [Parameter] public RenderFragment? UiLoading { get; set; }
    [Parameter] public RenderFragment? UiLoaded { get; set; }
    [Parameter] public RenderFragment? UiError { get; set; }
}