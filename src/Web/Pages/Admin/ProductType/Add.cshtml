@page
@model Web.Pages.Admin.ProductType.Add

@{
    ViewData["Title"] = "Add Product";
    ViewData["LayoutClasses"] = "admin-page";
    ViewData["ShowFooter"] = false;
}

<div class="layout layout__full admin-header">
    <h1 class="admin-header__heading">Add Product</h1>
</div>

<form class="form--admin" method="post">
    <div class="form__admin-group">
        <div>
            <input type="text" class="form__input" placeholder="Enter name of product type" id="name" asp-for="NewProductType.Name">
            <label for="name" class="form__label form__label--input">Name</label>
        </div>
        <div>
            <input type="text" class="form__input" placeholder="Enter description of product type" id="description" asp-for="NewProductType.Description">
            <label for="description" class="form__label form__label--input">Description</label>
        </div>
        <div>
            <select class="form__select" id="department" asp-for="NewProductType.DepartmentId">
                <option></option>
                @foreach (var department in Model.Departments)
                {
                    <option value="@department.Id">@department.Name</option>
                }
            </select>
            <label for="department" class="form__label">Department</label>

        </div>

    </div>
    <div>
        <button type="submit" class="btn btn--primary">
            Submit
        </button>
    </div>
</form>