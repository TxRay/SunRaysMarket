@inherits OwningComponentBase<SunRaysMarket.Shared.Core.Services.IProductService>
@page "/Departments/{slug}/{id:int}"


<PageLayout ContentWidth="ContentWidth.PageFull">
    <ProductSection Heading="Featured Products" StreamedProducts="@StreamedProducts"/>
</PageLayout>

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public string Slug { get; set; } = string.Empty;

    private IAsyncEnumerable<ProductListModel> StreamedProducts { get; set; } = default!;

    protected override void OnInitialized()
    {
        StreamedProducts = Service.GetAllProductsAsync(Id)!;
    }


}