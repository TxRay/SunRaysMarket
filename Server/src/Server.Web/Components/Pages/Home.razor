@using Application.UnitOfWork
@using SunRaysMarket.Server.Components.Enums
@inherits OwningComponentBase<IUnitOfWork>

@page "/"

<AppPageTitle>Home</AppPageTitle>

<MainHeader>
    <HeroHome/>
</MainHeader>

<PageLayout CssClasses="main-home" ContentWidth="ContentWidth.PageFull" >
    <ProductSection Heading="Featured Products" FeaturedProducts="@Products"/>
</PageLayout>

@code {
    private IAsyncEnumerable<ProductListModel> Products { get; set; } = default!;


    protected override void OnInitialized()
    {
        base.OnInitialized();
        Products = Service.ProductRepository.GetAllAsync();
    }

}