@using SunRaysMarket.Server.Components.Enums
@inherits OwningComponentBase<IProductService>
@page "/Departments/{slug}/{id:int}"


<PageLayout ContentWidth="ContentWidth.PageFull">
    <ProductSection Heading="Featured Products" FeaturedProducts="@Products" />
</PageLayout>

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public string Slug { get; set; } = string.Empty;

    private IAsyncEnumerable<ProductListModel> Products { get; set; } = default!;

    protected override void OnInitialized()
    {
        Products = Service.GetAllProductsAsync(Id);
    }

}